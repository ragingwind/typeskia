{
  "name": "rust-textnote",
  "version": "1.0.0",
  "description": "Canvas based text note with WebAssembly",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ragingwind/rust-textnote.git"
  },
  "author": {
    "name": "Jimmy Moon",
    "email": "ragingwind@gmail.com",
    "url": "https://jimmy.im"
  },
  "main": "index.js",
  "napi": {
    "name": "rust-textnote",
    "triples": {
      "defaults": false,
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl",
        "x86_64-unknown-linux-gnu",
        "x86_64-unknown-linux-musl"
      ]
    }
  },
  "scripts": {
    "build:skia": "node ./scripts/build.js",
    "clean:skia": "node ./scripts/clean.js",
    "build": "napi build --platform --release --js index.js",
    "build:debug": "napi build --platform --js index.js",
    "artifacts": "napi artifacts",
    "prepublishOnly": "napi prepublish -t npm",
    "version": "napi version",
    "test": "vitest"
  },
  "keywords": [
    "rust",
    "skia",
    "typography"
  ],
  "devDependencies": {
    "@napi-rs/cli": "^2.11.4",
    "vitest": "^0.23.4"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@7.5.0"
}
